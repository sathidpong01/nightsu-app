datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Oneshot {
  id           String   @id @default(cuid())
  title        String
  description  String?
  coverUrl     String
  pageCount    Int      @default(0)
  updatedAt    DateTime @updatedAt
  publishedAt  DateTime?
  isPublished  Boolean  @default(false)
  ageBadge     String?
  authorName   String?
  genres       String[]

  @@index([isPublished])
  @@index([publishedAt])
  @@index([authorName])
}